version: "3.9"
services:
  wireguard:
    image: lscr.io/linuxserver/wireguard:latest
    container_name: wireguard
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    environment:
      - PUID=0
      - PGID=0
      - TZ=UTC
      - LOG_CONFS=true
    volumes:
      - ./wireguard.conf:/config/wg0.conf
      - /lib/modules:/lib/modules
    network_mode: host
    restart: unless-stopped
  lb:
    image: docker.io/nginx:latest
    container_name: lb
    volumes:
      - http2136-socket:/run
      - ./vhost.conf:/etc/nginx/conf.d/default.conf
      - ./https.crt:/etc/nginx/cert.pem
      - ./https.key:/etc/nginx/key.pem
    networks:
      - gateway
    environment:
      - NGINX_PORT=2136
    ports:
      - 2136:2136
  dns:
    image: docker.io/ubuntu/bind9:latest
    container_name: dns
    networks:
      - gateway
    ports:
      - 53:53
      - 53:53/udp
    volumes:
      - dns-cache:/var/cache/bind
      - dns-run:/run/named
      - ./rndc.key:/etc/bind/rndc.key
      - ./named.conf:/etc/bind/named.conf
      - ./home.tremoureux.fr:/etc/bind/home.tremoureux.fr
  http2136:
    image: ghcr.io/tsacha/http2136:latest
    container_name: http2136
    env_file:
      - .env
    networks:
      - gateway
    volumes:
      - http2136-socket:/run
      - dns-run:/run/named

networks:
  gateway:

volumes:
  http2136-socket:
  dns-run:
  dns-cache:
