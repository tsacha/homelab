---
machine:
  certSANs:
    - {{ (datasource "secrets").kube.endpoint }}
cluster:
  allowSchedulingOnControlPlanes: true
  controlPlane:
    endpoint: https://{{ (datasource "secrets").kube.endpoint }}:6443
  proxy:
    disabled: true
  clusterName: {{ (datasource "secrets").kube.cluster }}
  network:
    cni:
      name: none
  apiServer:
    admissionControl:
      - name: PodSecurity
        configuration:
          apiVersion: pod-security.admission.config.k8s.io/v1alpha1
          defaults:
            audit: restricted
            audit-version: latest
            enforce: baseline
            enforce-version: latest
            warn: baseline
            warn-version: latest
          exemptions:
            namespaces:
              - cilium
              - storage
              - monitoring
              - iot
            runtimeClasses: []
            usernames: []
          kind: PodSecurityConfiguration
  etcd:
    advertisedSubnets:
      - {{ (datasource "secrets").kube.nodesubnet6 }}
  extraManifests:
    - https://github.com/kubernetes-sigs/gateway-api/releases/download/v1.0.0/experimental-install.yaml
